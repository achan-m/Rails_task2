<div class="container">
 <div class="row">
  <%= render 'books/list', book: @book, user: @user %>

  <div class="col-lg-8">
    <h2>Books</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
           <tr>
             <td>
               <%=link_to user_path(@user.id) do %>
                 <%= image_tag @user.get_profile_image(80,80) %>
               <%end%>
              </td>
             <td>
               <%=link_to book_path(book.id) do %>
               <%= book.title %>
               <%end%>
             </td>
             <td><%= book.body %></td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
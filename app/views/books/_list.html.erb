  <div class="container">
   <%= form_with model: @book do |f| %>
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
          <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
              
              <th>introduction</th>
            </tr>
            <a class="btn btn-online-secondary btn-block edit_user_path"></a>
          </tbody>
        </table>
      </div>
    </div>

    <h1>New Book</h1>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <%end%>
 </div>